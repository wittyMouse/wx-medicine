<wxs module="patient">
    var numFormat = function (str) {
        var arr = str.match(getRegExp("(\d{3})(\d+)(\d{4})"));
        return [arr[1], arr[2].replace(getRegExp("\d", 'g'), '*'), arr[3]].join('');
    };
    module.exports.numFormat = numFormat;
</wxs>