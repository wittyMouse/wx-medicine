.login {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
}

.login-mask {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 101;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .6);
}

.login .card {
    position: absolute;
    top: 350rpx;
    left: 15%;
    width: 70%;
    z-index: 102;
    border-radius: 10rpx;
    background-color: #f5f5f5;
}

.login .card .header {
    padding: 40rpx 0;
    background-color: #4169e1;
    color: #fff;
    text-align: center;
}

.login .card .container {
    padding: 40rpx 0 0;
    font-size: 32rpx;
    text-align: center;
}

.login .card .footer {
    padding: 40rpx 0;
}

.login .card .footer .login-btn {
    height: 90rpx;
    border-radius: 90rpx;
    margin: 0 60rpx;
    background-color: #4169e1;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}

.no-button {
    /* position: unset; */
    display: block;
    margin: 0;
    padding: 0;
    box-sizing: inherit;
    font-size: inherit;
    text-align: inherit;
    /* text-decoration: unset; */
    line-height: inherit;
    border-radius: inherit;
    /* -webkit-tap-highlight-color: unset; */
    overflow: inherit;
    color: inherit;
    background-color: inherit;
}

.no-button::after {
    border: 0;
}