page {
    background-color: var(--bgColor);
}

.flex {
    display: flex;
}

.flex-x-center {
    justify-content: center;
}

.flex-y-center {
    align-items: center;
}

.flex-0 {
    flex-grow: 0;
    flex-shrink: 0;
}

.flex-1 {
    flex-grow: 1;
    flex-shrink: 1;
}

.line-1 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.line-2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.no-button {
    /* position: unset; */
    /* display: unset; */
    margin-left: unset;
    margin-right: unset;
    padding-left: unset;
    padding-right: unset;
    /* box-sizing: unset; */
    font-size: unset;
    text-align: unset;
    /* text-decoration: unset; */
    line-height: unset;
    border-radius: unset;
    /* -webkit-tap-highlight-color: unset; */
    /* overflow: unset; */
    color: unset;
    background-color: unset;
}

.no-button::after {
    border: unset;
}