.row {
    padding: 30rpx;
    border-bottom: 1px solid #f5f5f5;
    background-color: #fff;
    font-size: 30rpx;
}

.row.m-b {
    margin-bottom: 20rpx;
}

.row .label {
    
}

.row .value {
    color: var(--backgroundColorOne);
}

.row .name {
    margin-right: 50rpx;
}

.row .icon-delete {
    color: var(--danger);
}

.btn-confirm {
    margin: 50rpx 30rpx 0;
    height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    background-color: var(--backgroundColorOne);
}

.pop {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    padding: 30rpx;
    background-color: rgba(0, 0, 0, .6);
    box-sizing: border-box;
}

.pop .card {
    width: 100%;
    background-color: #fdfdfd;
}

.pop .card .header {
    padding: 20rpx 0;
    border-bottom: 1px solid rgba(9, 187, 6, .4);
}

.pop .card .header .icon-guanbi {
    padding: 20rpx;
    font-size: 26rpx;
    color: var(--colorOne);
}

.pop .card .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 6rpx;
    margin-right: 10rpx;
}

.pop .card .note {
    font-size: 32rpx;
}

.pop .card .container {
    padding: 20rpx 0;
}

.pop .card .container .label {
    font-size: var(--fontSizeOne);
    text-align: center;
}

.pop .card .container .value {
    margin-bottom: 20rpx;
}

.pop .card .container .value .unit {
    /* margin-right: 10rpx; */
    font-size: var(--fontSizeOne);
    font-weight: bold;
}

.pop .card .container .value .text {
    font-size: 50rpx;
    line-height: 1;
}

.pop .card .container .input-wrapper {
    padding: 0 30rpx;
}

.pop .card .container .input-wrapper .list {
    border: 1px solid rgba(0, 0, 0, .4);
}

.pop .card .container .input-wrapper .list .item:first-child {
    border-left: 0;
    background-color: #fff;
}

.pop .card .container .input-wrapper .list .item {
    width: calc(100%/6);
    height: 100rpx;
    border-left: 1px solid #f5f5f5;
    font-size: 40rpx;
    color: #000;
    text-align: center;
    line-height: 100rpx;
    background-color: #fff;
}

.pop .card .container .input-wrapper .input {
    position: absolute;
    left: 0;
    top: -9999rpx;
    
}