          </block>
        </block>
        <view class="flex-0 name">{{item.patientName}}</view>
        <view class="flex-1 id-card">{{patient.numFormat(item.idCard)}}</view>
        <view class="flex-0 iconfont icon-enter" hidden="{{tag||edit}}"></view>
      </view>
    </block>
  </view>
