/* 医院列表样式 */
.hosp-list {
  padding: 0 30rpx;
  background-color: #fff;
}

.hosp-item {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.hosp-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.hosp-name {
  font-size: 34rpx;
}

.hosp-item .icon-all_selectm,
.hosp-item .icon-all_noselectm {
  margin-right: 30rpx;
  color: var(--backgroundColorOne);
}


