.loading {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.loading .container {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translate3d(0, -60%, 0);
}

.loading .container .img {
    display: block;
    width: 160rpx;
    height: 120rpx;
    margin: 0 auto 10rpx;
}

.loading .container .txt {
    font-size: 32rpx;
    color: #000;
    text-align: center;
}